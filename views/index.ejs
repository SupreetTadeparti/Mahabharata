<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@300;400;600&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="style.css" />
    <title>Mahabharata</title>
  </head>
  <body>
    <div class="container">
      <div class="main-heading">Mahabharata</div>
      <div class="book-heading">
        <% if (parseInt(book) !== 1) { %>
          <a href="/?book=<%- parseInt(book) - 1 %>&section=1" class="prev"></a>
        <% } %>
        Book <%= book %> 
        <a href="/?book=<%- parseInt(book) + 1 %>&section=1" class="next"></a>
      </div>
      <div class="section-heading">
        <% if (parseInt(section) !== 1) { %>
          <a href="/?book=<%- book %>&section=<%- parseInt(section) - 1 %>" class="prev"></a>
        <% } %>
        Section <%= section %> 
        <a href="/?book=<%- book %>&section=<%- parseInt(section) + 1 %>" class="next"></a>
      </div>
      <div class="content"></div>
    </div>
  </body>
  <script type="module">
    const book = "<%- book %>";
    const section = "<%- section %>";


    const contentEl = document.querySelector(".content");
    contentEl.innerHTML = "";
    fetch("http://localhost:3000/data")
      .then((response) => response.json())
      .then((json) => {
        for (const para of json[`Book ${book}`][`Section ${section}`]) {
          const paraEl = document.createElement("p");
          paraEl.textContent = para;
          contentEl.appendChild(paraEl);
        }
      });
  </script>
</html>
